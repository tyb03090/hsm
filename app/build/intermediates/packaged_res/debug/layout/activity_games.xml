<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.bottom_navigation_bar.GamesActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:titleTextColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/game_1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/game_1"
        android:transitionName="imgTrans"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/game_2"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />


    <ImageView
        android:id="@+id/game_2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/game_2"
        android:transitionName="imgTrans"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/game_1"
        app:layout_constraintTop_toTopOf="@+id/game_1" />

    <ImageView
        android:id="@+id/game_3"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/game_3"
        android:transitionName="imgTrans"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="@+id/game_1"
        app:layout_constraintTop_toBottomOf="@+id/game_1" />

    <ImageView
        android:id="@+id/game_4"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/game_4"
        android:transitionName="imgTrans"
        app:layout_constraintStart_toStartOf="@+id/game_2"
        app:layout_constraintTop_toTopOf="@+id/game_3" />

    <ImageView
        android:id="@+id/game_5"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/game_5"
        android:transitionName="imgTrans"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
        app:layout_constraintEnd_toEndOf="@+id/game_4"
        app:layout_constraintStart_toStartOf="@+id/game_3"
        app:layout_constraintTop_toBottomOf="@+id/game_3" />

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:ignore="MissingConstraints"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu_home" />

</androidx.constraintlayout.widget.ConstraintLayout>